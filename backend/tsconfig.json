{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "./",
      "baseUrl": "./src",
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "watch": true,
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "./src/**/*.test.ts",
      "./src/public/"
    ]
  }